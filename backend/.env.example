# ============================================
# THE STUDIO RENO - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# --------------------------------------------
# REQUIRED - Must be set for app to work
# --------------------------------------------

# Database connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/thestudio

# Secret key for JWT tokens (generate a random 32+ character string)
# Generate one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-this-in-production

# Your frontend URL (no trailing slash)
FRONTEND_URL=http://localhost:5173

# --------------------------------------------
# PAYMENTS - Required for selling memberships
# --------------------------------------------

# Stripe API keys - get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# --------------------------------------------
# EMAIL - Required for notifications
# --------------------------------------------

# SendGrid API key - get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG...

# Email address to send from (must be verified in SendGrid)
FROM_EMAIL=hello@thestudioreno.com

# --------------------------------------------
# OPTIONAL - Enhanced features
# --------------------------------------------

# Cloudinary (for image uploads)
# Get these from cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+17755551234

# Facebook/Instagram auto-posting
FACEBOOK_PAGE_ID=...
FACEBOOK_ACCESS_TOKEN=...
INSTAGRAM_ACCOUNT_ID=...

# Cron job security
CRON_SECRET=your-cron-secret

# CORS origin (comma-separated if multiple)
CORS_ORIGIN=http://localhost:5173

# Node environment
NODE_ENV=development

# Server port
PORT=3000

# Studio info (for emails)
STUDIO_NAME=The Studio Reno
STUDIO_ADDRESS=1085 S Virginia St, Reno, NV 89502
STUDIO_PHONE=(775) 555-YOGA

# --------------------------------------------
# MINDBODY API INTEGRATION
# --------------------------------------------

# MindBody API credentials - get from https://developers.mindbodyonline.com
# Create a developer account and get your API key
MINDBODY_API_KEY=your-mindbody-api-key

# Your MindBody Site ID (found in MindBody admin under Settings > API)
MINDBODY_SITE_ID=-99

# Staff credentials for authenticated API calls (optional but recommended)
# These are the login credentials for a staff member with API access
MINDBODY_STAFF_USERNAME=
MINDBODY_STAFF_PASSWORD=

# Webhook secret for verifying incoming webhooks (optional)
# Set this when configuring webhooks in MindBody developer portal
MINDBODY_WEBHOOK_SECRET=

# Sync settings
MINDBODY_AUTO_SYNC=true
MINDBODY_SYNC_INTERVAL=15
