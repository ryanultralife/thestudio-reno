# ============================================
# THE STUDIO RENO - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# CRITICAL - REQUIRED FOR STARTUP
# ============================================

# Database connection string (PostgreSQL)
# Format: postgresql://username:password@host:port/database
# Railway example: postgresql://postgres:password@containers-us-west-123.railway.app:5432/railway
DATABASE_URL=postgresql://localhost:5432/thestudio_reno

# JWT Secret for authentication tokens (MUST be strong and unique)
# Generate with: openssl rand -base64 32
# NEVER use the same secret in production as development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# SERVER CONFIGURATION
# ============================================

# Environment (development, production, test)
NODE_ENV=development

# Server port (Railway sets this automatically)
PORT=3000

# CORS origin (comma-separated if multiple)
# Production example: https://yourstudio.com,https://www.yourstudio.com
# Development: use * for all origins
CORS_ORIGIN=*

# Database SSL configuration
# Railway/Heroku require rejectUnauthorized: false
# For self-hosted DB with proper certs, set to true
DB_SSL_REJECT_UNAUTHORIZED=false

# ============================================
# PAYMENT PROCESSING (Stripe)
# ============================================
# Optional - payment features won't work without these
# Get your keys from: https://dashboard.stripe.com/apikeys

# Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_your_key_here

# Stripe webhook secret (starts with whsec_)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# EMAIL NOTIFICATIONS (SendGrid)
# ============================================
# Optional - email features won't work without these
# Get your API key from: https://app.sendgrid.com/settings/api_keys

# SendGrid API key (starts with SG.)
SENDGRID_API_KEY=SG.your_api_key_here

# From email address (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=noreply@yourstudio.com

# ============================================
# SMS NOTIFICATIONS (Twilio)
# ============================================
# Optional - SMS features won't work without these
# Get credentials from: https://console.twilio.com

# Twilio Account SID
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio phone number (must be purchased from Twilio)
TWILIO_PHONE_NUMBER=+15551234567

# ============================================
# MINDBODY MIGRATION
# ============================================
# Optional - only needed for importing data from Mindbody
# Register at: https://developers.mindbodyonline.com

# Mindbody API key
MINDBODY_API_KEY=your_api_key_here

# Mindbody Site ID
MINDBODY_SITE_ID=your_site_id_here

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Set to true to see detailed SQL query logs
DEBUG_SQL=false

# Set to true to enable verbose logging
DEBUG=false
